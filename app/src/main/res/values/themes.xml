<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MD_GBProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_gray_600</item>
        <item name="colorPrimaryVariant">@color/blue_gray_900</item>
        <item name="colorOnPrimary">@color/blue_gray_300</item>
        <item name="android:navigationBarColor">@color/blue_gray_500</item>
        <item name="colorPrimaryContainer">@color/blue_gray_100</item>
        <item name="colorOnPrimaryContainer">@color/blue_gray_900</item>
        <item name="colorPrimaryInverse">@color/blue_gray_200</item>
        <item name="colorSecondary">@color/blue_gray_600</item>
        <item name="colorOnSecondary">@color/blue_gray_100</item>
        <item name="colorSecondaryContainer">@color/blue_gray_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_gray_900</item>
        <item name="colorTertiary">@color/blue_gray_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/blue_gray_100</item>
        <item name="colorOnTertiaryContainer">@color/blue_gray_900</item>

        <!-- Secondary brand color. -->

        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="chipStyle">@style/BlueGreyStyleChip</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlueGreyStyleChip" parent="Widget.MaterialComponents.Chip.Choice" />

    <style name="BlueGreyStyleFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/blue_gray_900</item>
    </style>

    <style name="BlueGreyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#37474F</item>
        <item name="helperTextEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="errorTextColor">#263238</item>
    </style>

</resources>